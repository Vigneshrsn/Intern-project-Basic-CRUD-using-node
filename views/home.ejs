<title>My Bands | Home </title>
<%- include ('./partials/nav') %>
    <a class="navbar-brand" href="/user/<%=user.uid%>/bands">My Bands</a>
    <br>
    <div class="list-group">

        <% bands.forEach( (band) => { %>
            <a href="/bands/band/<%= band.bid %>/user/<%= user.uid %>" class="list-group-item list-group-item-action flex-column align-items-start ">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <%= band.name %>
                    </h5>

                    <h5>
                        <% for(var i=0; i<band.rating; i++) {%>
                            &#9733;
                            <% } %>
                    </h5>

                </div>
                <p class="mb-1">
                    <%= band.description%>
                </p>
                <small><%= band.origin %></small>
            </a>
            <% }); %>

    </div>